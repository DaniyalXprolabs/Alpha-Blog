<div class="container" style="margin: 30px; padding: 20px;">
<h6>Title: <%= @article.title %></h6>
<p>Description: <%= @article.description %></p>
<p>Created at: <%= @article.created_at %></p>
  <p>Created by <%= link_to @article.user.username, user_path(@article.user) %></p>
  <%= link_to "Edit the Article", edit_article_path, class: "btn btn-warning" %>      <%= link_to "Delete the Article",  article_path(@article), method: :delete, data:{confirm:"Are you sure"}, class: "btn btn-danger" %>
<br>
<br>
<%= link_to "Back to home", root_path, class: "btn btn-info" %>
</div>